<div class="container container-auth bg-white rounded text-center mt-5 p-5">

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <h2>Forgot your password?</h2>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mb-4">
    <div class="text-start">
      <%= f.label :email %><br />
    </div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-3" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class:"btn btn-primary mb-3" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>